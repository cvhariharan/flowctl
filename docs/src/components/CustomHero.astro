---
const { logo, title, tagline } = Astro.props;
---

<div class="custom-hero">
  <div class="hero-content">
    <div class="logo-container">
      <img src={logo} alt="Logo" class="hero-logo" />
    </div>
    <h1 class="hero-title">{title}</h1>
    {tagline && <p class="hero-tagline">{tagline}</p>}
  </div>
</div>

<style>
  .custom-hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    min-height: 40vh;
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
    width: 100%;
  }

  .logo-container {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .hero-logo {
    width: 120px;
    height: 120px;
    object-fit: contain;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.2;
    margin: 0 0 1rem 0;
    color: var(--sl-color-white);
  }

  .hero-tagline {
    font-size: clamp(1rem, 2vw, 1.5rem);
    color: var(--sl-color-gray-2);
    margin: 0 0 2rem 0;
  }

  @media (max-width: 768px) {
    .custom-hero {
      padding: 3rem 1rem;
    }

    .hero-logo {
      width: 80px;
      height: 80px;
    }
  }
</style>
