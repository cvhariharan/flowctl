package partials

templ InlineError(msg string) {
	<div
		id="inline-error"
		class="p-5 opacity-100 transition-opacity duration-300"
	>
		if msg != "" {
			<div
				hx-trigger="load delay:5s"
				hx-swap="outerHTML"
				hx-target="#inline-error"
				hx-get="/ping"
				class="transition-opacity duration-300 bg-red-100 p-8 rounded-lg max-w-screen-sm w-screen mx-auto text-red-600"
			>
				Error: { msg }
			</div>
		}
	</div>
}
