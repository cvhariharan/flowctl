package ui

import "github.com/cvhariharan/autopilot/internal/ui/partials"
import "strconv"

templ ErrorPage(code int, message string) {
    @partials.BaseLayout("autopilot: error") {
        <div class="flex h-screen flex-col justify-center items-center">
            <div>
				<h1 class="font-bold text-5xl">{ strconv.Itoa(code) }</h1>
				<h3 class="font-light text-2xl">{ message }</h3>
            </div>
        </div>
    }
}